            <amplif_factor s="1" t="1"/>
        </TEXTURE>

        <TEXTURE id="wood_for_windows">
            <file path="images/wood_windows.jpg"/>
            <amplif_factor s="1" t="1"/>
        </TEXTURE>
    </TEXTURES>
    
    <!-- Materials Group -->
    <MATERIALS>
        <!-- A default material -->
        <MATERIAL id="defaultMaterial">
            <shininess value="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1" />
            <ambient r="0.4" g="0.4" b="0.4" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
    </MATERIALS>
    
    <ANIMATIONS>
    
    </ANIMATIONS>
    
    <NODES>
        <ROOT id="root"/>

        <!-- raiz -->
        <NODE id="root">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>
        
            <DESCENDANTS>
<!-- a nÃ£o usar
                <NODEREF id="piece_support"/>
-->
<!--
                <NODEREF id="board_play"/>
