                <NODEREF id="table"/>
-->
                <NODEREF id="japonese_big_window"/>   
            </DESCENDANTS>
        </NODE>

        <!-- board -->
        <NODE id="board_play">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="1" y="2.8" z="1"/>

            <DESCENDANTS>
                <LEAF type="board" args="1 1 4"/>
            </DESCENDANTS>
        </NODE>

        <!-- white piece -->
        <NODE id="white_piece">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="7" y="3.2" z="1.3"/>

            <DESCENDANTS>
                <LEAF type="piece" args="white"/>
            </DESCENDANTS>
        </NODE>

        <!-- black piece -->
        <NODE id="black_piece">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="7" y="3.2" z="7"/>

            <DESCENDANTS>
                <LEAF type="piece" args="black"/>
            </DESCENDANTS>
        </NODE>

        <!-- mix piece -->
        <NODE id="mix_piece">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <DESCENDANTS>
                <LEAF type="piece" args="mix"/>
            </DESCENDANTS>
        </NODE>

        <!-- support for pieces not yet played -->
        <NODE id="piece_support">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <DESCENDANTS>
                <NODEREF id="base"/>
                <NODEREF id="top_lateral"/>
                <NODEREF id="bottom_lateral"/>
                <NODEREF id="right_lateral"/>
                <NODEREF id="left_lateral"/>
            </DESCENDANTS>
        </NODE>

        <!-- support for pieces: base -->
        <NODE id="base">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <SCALE sx="3" sy="0.1" sz="7"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- support for pieces: top lateral -->
        <NODE id="top_lateral">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="-1.37" y="0.2" z="0"/>
            <SCALE sx="0.25" sy="0.5" sz="7"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- support for pieces: bottom lateral -->
        <NODE id="bottom_lateral">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="1.37" y="0.2" z="0"/>
            <SCALE sx="0.25" sy="0.5" sz="7"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- support for pieces: right lateral -->
        <NODE id="right_lateral">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0" y="0.2" z="3.37"/>
            <SCALE sx="2.5" sy="0.5" sz="0.25"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- support for pieces: left lateral -->
        <NODE id="left_lateral">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0" y="0.2" z="-3.37"/>
            <SCALE sx="2.5" sy="0.5" sz="0.25"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- table for the game board-->
        <NODE id="table">
            <MATERIAL id ="defaultMaterial"/>
            <TEXTURE id="wood_for_table"/>

            <TRANSLATION x="4" y="0" z="4"/>

            <DESCENDANTS>
                <NODEREF id="cover"/>
                <NODEREF id="left_leg"/>
                <NODEREF id="right_leg"/>
                <NODEREF id="left_back_leg"/>
                <NODEREF id="right_back_leg"/>
            </DESCENDANTS>
        </NODE>

        <!-- table: cover -->
        <NODE id="cover">
            <MATERIAL id ="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0" y="2.5" z="0"/>
            <SCALE sx="6" sy="0.65" sz="6"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- table: left_leg -->
        <NODE id="left_leg">
            <MATERIAL id ="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="2.72" y="1.375" z="2.72"/>
            <SCALE sx="0.55" sy="2.5" sz="0.55"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- table: right_leg -->
        <NODE id="right_leg">
            <MATERIAL id ="defaultMaterial"/>
            <TEXTURE id="null"/>

