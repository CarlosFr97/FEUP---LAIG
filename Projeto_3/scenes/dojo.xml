<SCENE>
    <!-- Inicial values -->
    <INITIALS>
        <frustum near="0.1" far="500"/>
        <translation x="-1" y="1" z="0" />
        <rotation axis="x" angle="0" />
        <rotation axis="y" angle="0" />
        <rotation axis="z" angle="0" />
        <scale sx="0.25" sy="0.25" sz="0.25" />
        <reference length="5" />
    </INITIALS>

    <!-- Illumination and clear colour -->
    <ILLUMINATION>
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <background r="0" g="0" b="0" a="1" />
    </ILLUMINATION>

    <!-- Lights Group -->
    <LIGHTS>
        <LIGHT id="light0">
            <enable value ="1" />
            <position  x="3.5" y="11" z="12.5" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>

        <LIGHT id="light1">
            <enable value ="1" />
            <position x="30" y="12.5" z="0" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>

        <LIGHT id="light2">
            <enable value ="1" />
            <position x="0" y="12.5" z="20" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>

        <LIGHT id="light3">
            <enable value ="1" />
            <position x="30" y="12.5" z="20" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </LIGHT>

        <LIGHT id="light4">
            <enable value ="1" />
            <position x="0" y="12.5" z="40" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </LIGHT>

        <LIGHT id="light5">
            <enable value ="1" />
            <position x="30" y="12.5" z="40" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </LIGHT>

        <LIGHT id="light6">
            <enable value ="1" />
            <position x="0" y="11" z="60" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </LIGHT>

        <LIGHT id="light7">
            <enable value ="1" />
            <position x="31.5" y="11" z="48.5" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </LIGHT>
    </LIGHTS>
    
    <!-- Textures Group -->
    <TEXTURES>
        <TEXTURE id="glass">
            <file path="images/glass.jpg"/>
            <amplif_factor s="4" t="4"/>
        </TEXTURE>
    </TEXTURES>
    
    <!-- Materials Group -->
    <MATERIALS>
        <!-- A default material -->
        <MATERIAL id="defaultMaterial">
            <shininess value="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1" />
            <ambient r="0.4" g="0.4" b="0.4" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
    </MATERIALS>
    
    <ANIMATIONS>
    
    </ANIMATIONS>
    
    <NODES>
        <ROOT id="root"/>

        <!-- raiz -->
        <NODE id="root">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>
        
            <DESCENDANTS>

                <NODEREF id="board_play"/>
                <NODEREF id="mix_piece"/>
                <NODEREF id="white_piece"/> 
                <NODEREF id="black_piece"/>
                <NODEREF id="mix_piece"/>
                <NODEREF id="piece_support"/>

                <NODEREF id="table"/>
            </DESCENDANTS>
        </NODE>

        <!-- board -->
        <NODE id="board_play">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <DESCENDANTS>
                <LEAF type="board" args="1 1 4"/>
            </DESCENDANTS>
        </NODE>

        <!-- white piece -->
        <NODE id="white_piece">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <DESCENDANTS>
                <LEAF type="piece" args="white"/>
            </DESCENDANTS>
        </NODE>

        <!-- black piece -->
        <NODE id="black_piece">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <DESCENDANTS>
                <LEAF type="piece" args="black"/>
            </DESCENDANTS>
        </NODE>

        <!-- mix piece -->
        <NODE id="mix_piece">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <DESCENDANTS>
                <LEAF type="piece" args="mix"/>
            </DESCENDANTS>
        </NODE>

        <!-- support for pieces not yet played -->
        <NODE id="piece_support">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <DESCENDANTS>
                <NODEREF id="base"/>
                <NODEREF id="top_lateral"/>
                <NODEREF id="bottom_lateral"/>
                <NODEREF id="right_lateral"/>
                <NODEREF id="left_lateral"/>
            </DESCENDANTS>
        </NODE>

        <!-- support for pieces: base -->
        <NODE id="base">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <SCALE sx="3" sy="0.1" sz="7"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- support for pieces: top lateral -->
        <NODE id="top_lateral">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="-1.37" y="0.2" z="0"/>
            <SCALE sx="0.25" sy="0.5" sz="7"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- support for pieces: bottom lateral -->
        <NODE id="bottom_lateral">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="1.37" y="0.2" z="0"/>
            <SCALE sx="0.25" sy="0.5" sz="7"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- support for pieces: right lateral -->
        <NODE id="right_lateral">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0" y="0.2" z="3.37"/>
            <SCALE sx="2.5" sy="0.5" sz="0.25"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- support for pieces: left lateral -->
        <NODE id="left_lateral">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0" y="0.2" z="-3.37"/>
            <SCALE sx="2.5" sy="0.5" sz="0.25"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- table for the game board-->
        <NODE id="table">
            <MATERIAL id ="defaultMaterial"/>
            <TEXTURE id="null"/>

            <DESCENDANTS>
                <NODEREF id="cover"/>
                <NODEREF id="left_leg"/>
                <NODEREF id="right_leg"/>
                <NODEREF id="left_back_leg"/>
                <NODEREF id="right_back_leg"/>
            </DESCENDANTS>
        </NODE>

        <!-- table: cover -->
        <NODE id="cover">
            <MATERIAL id ="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0" y="4" z="0"/>
            <SCALE sx="4" sy="0.65" sz="4"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- table: left_leg -->
        <NODE id="left_leg">
            <MATERIAL id ="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="1.67" y="2" z="1.67"/>
            <SCALE sx="0.65" sy="4" sz="0.65"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- table: right_leg -->
        <NODE id="right_leg">
            <MATERIAL id ="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="1.67" y="2" z="-1.67"/>
            <SCALE sx="0.65" sy="4" sz="0.65"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- table: left_back_leg -->
        <NODE id="left_back_leg">
            <MATERIAL id ="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="-1.67" y="2" z="1.67"/>
            <SCALE sx="0.65" sy="4" sz="0.65"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- table: right_back_leg -->
        <NODE id="right_back_leg">
            <MATERIAL id ="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="-1.67" y="2" z="-1.67"/>
            <SCALE sx="0.65" sy="4" sz="0.65"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

<!-- --> <!-- --> <!-- --> <!-- --> <!-- --> <!-- --> <!-- -->  <!-- -->
                        <!-- EXTRA -->
        <!-- generic cube -->
        <NODE id="cube">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>
        
            <DESCENDANTS>
                <NODEREF id="face_1"/>
                <NODEREF id="face_2"/>
                <NODEREF id="face_3"/>
                <NODEREF id="face_4"/>
                <NODEREF id="face_5"/>
                <NODEREF id="face_6"/>
            </DESCENDANTS>
        </NODE>

        <!-- vertical face front -->
        <NODE id="face_1">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0" y="0" z="0.5"/>
        
            <DESCENDANTS>
                <NODEREF id="generic_face"/>
            </DESCENDANTS>
        </NODE>

        <!-- vertical face right side-->
        <NODE id="face_2">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0.5" y="0" z="0"/>
            <ROTATION axis="y" angle="90"/>
        
            <DESCENDANTS>
                <NODEREF id="generic_face"/>
            </DESCENDANTS>
        </NODE>

        <!-- vertical face back -->
        <NODE id="face_3">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0" y="0" z="-0.5"/>
            <ROTATION axis="y" angle="180"/>
        
            <DESCENDANTS>
                <NODEREF id="generic_face"/>
            </DESCENDANTS>
        </NODE>

        <!-- vertical face left side -->
        <NODE id="face_4">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="-0.5" y="0" z="0"/>
            <ROTATION axis="y" angle="-90"/>
        
            <DESCENDANTS>
                <NODEREF id="generic_face"/>
            </DESCENDANTS>
        </NODE>

        <!-- horizontal face top -->
        <NODE id="face_5">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0.0" y="0.5" z="0"/>
            <ROTATION axis="x" angle="-90"/>
        
            <DESCENDANTS>
                <NODEREF id="generic_face"/>
            </DESCENDANTS>
        </NODE>

        <!-- horizontal face bottom -->
        <NODE id="face_6">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0.0" y="-0.5" z="0"/>
            <ROTATION axis="x" angle="90"/>
        
            <DESCENDANTS>
                <NODEREF id="generic_face"/>
            </DESCENDANTS>
        </NODE>

        <!-- generic face -->
        <NODE id="generic_face">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>
        
            <DESCENDANTS>
                <NODEREF id="part_1"/>
                <NODEREF id="part_2"/>
                <NODEREF id="part_3"/>
                <NODEREF id="part_4"/>
            </DESCENDANTS>
        </NODE>

        <!-- one part of  generic face -->
        <NODE id="part_1">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <DESCENDANTS>
                <LEAF type="rectangle" args="0.0 -0.5 -0.5 0.0"/>
            </DESCENDANTS>
        </NODE>
        
        <!-- another part of generic face -->
        <NODE id="part_2">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0.5" y="0" z="0"/>

            <DESCENDANTS>
                <LEAF type="rectangle" args="0.0 -0.5 -0.5 0.0"/>
            </DESCENDANTS>
        </NODE>

        <!-- another part of generic face -->
        <NODE id="part_3">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <DESCENDANTS>
                <LEAF type="rectangle" args="0.0 0.5 0.5 0.0"/>
            </DESCENDANTS>
        </NODE>

        <!-- another part of generic face -->
        <NODE id="part_4">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="-0.5" y="0" z="0"/>

            <DESCENDANTS>
                <LEAF type="rectangle" args="0.0 0.5 0.5 0.0"/>
            </DESCENDANTS>
        </NODE>

        <!-- teste de ficheiro blender -->
        <NODE id="teste_blender">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <DESCENDANTS>
                <LEAF type="obj" args="AlmondBlossom"/>
            </DESCENDANTS>
        </NODE>
    </NODES>
</SCENE>
