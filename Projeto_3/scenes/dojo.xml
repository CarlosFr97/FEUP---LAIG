            <SCALE sx="0.05" sy="6" sz="0.05"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>
        
<!-- --> <!-- --> <!-- --> <!-- --> <!-- --> <!-- --> <!-- -->  <!-- -->
                        <!-- EXTRA -->
        <!-- generic cube -->
        <NODE id="cube">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>
        
            <DESCENDANTS>
                <NODEREF id="face_1"/>
                <NODEREF id="face_2"/>
                <NODEREF id="face_3"/>
                <NODEREF id="face_4"/>
                <NODEREF id="face_5"/>
                <NODEREF id="face_6"/>
            </DESCENDANTS>
        </NODE>

        <!-- vertical face front -->
        <NODE id="face_1">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0" y="0" z="0.5"/>
        
            <DESCENDANTS>
                <NODEREF id="generic_face"/>
            </DESCENDANTS>
        </NODE>

        <!-- vertical face right side-->
        <NODE id="face_2">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0.5" y="0" z="0"/>
            <ROTATION axis="y" angle="90"/>
        
            <DESCENDANTS>
                <NODEREF id="generic_face"/>
            </DESCENDANTS>
        </NODE>

        <!-- vertical face back -->
        <NODE id="face_3">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0" y="0" z="-0.5"/>
            <ROTATION axis="y" angle="180"/>
        
            <DESCENDANTS>
                <NODEREF id="generic_face"/>
            </DESCENDANTS>
        </NODE>

        <!-- vertical face left side -->
        <NODE id="face_4">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="-0.5" y="0" z="0"/>
            <ROTATION axis="y" angle="-90"/>
        
            <DESCENDANTS>
                <NODEREF id="generic_face"/>
            </DESCENDANTS>
        </NODE>

        <!-- horizontal face top -->
        <NODE id="face_5">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0.0" y="0.5" z="0"/>
            <ROTATION axis="x" angle="-90"/>
        
            <DESCENDANTS>
                <NODEREF id="generic_face"/>
            </DESCENDANTS>
        </NODE>

        <!-- horizontal face bottom -->
        <NODE id="face_6">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0.0" y="-0.5" z="0"/>
            <ROTATION axis="x" angle="90"/>
        
            <DESCENDANTS>
                <NODEREF id="generic_face"/>
            </DESCENDANTS>
        </NODE>

        <!-- generic face -->
        <NODE id="generic_face">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>
        
            <DESCENDANTS>
                <NODEREF id="part_1"/>
                <NODEREF id="part_2"/>
                <NODEREF id="part_3"/>
                <NODEREF id="part_4"/>
            </DESCENDANTS>
        </NODE>

        <!-- one part of  generic face -->
        <NODE id="part_1">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="-0.5" y="-0.5" z="0"/>

            <DESCENDANTS>
                <LEAF type="rectangle" args="0.0 0.5 0.5 0.0"/>
            </DESCENDANTS>
        </NODE>
        
        <!-- another part of generic face -->
        <!--    
                |_|_|
                |_|X| 
         -->
        <NODE id="part_2">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0" y="-0.5" z="0"/>

            <DESCENDANTS>
                <LEAF type="rectangle" args="0.0 0.5 0.5 0.0"/>
            </DESCENDANTS>
        </NODE>

        <!-- another part of generic face -->
        <NODE id="part_3">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <DESCENDANTS>
                <LEAF type="rectangle" args="0.0 0.5 0.5 0.0"/>
            </DESCENDANTS>
        </NODE>

        <!-- another part of generic face -->
        <NODE id="part_4">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="-0.5" y="0" z="0"/>

            <DESCENDANTS>
                <LEAF type="rectangle" args="0.0 0.5 0.5 0.0"/>
            </DESCENDANTS>
        </NODE>
    </NODES>
</SCENE>
