            <SCALE sx="0.55" sy="2.5" sz="0.55"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- japonese window -->
        <NODE id="japonese_big_window">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <DESCENDANTS>
                <NODEREF id="window"/>
                <NODEREF id="white_plan"/>
                <NODEREF id="ridge"/>
            </DESCENDANTS>
        </NODE>

        <!-- japonese window: window -->
        <NODE id="window">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="wood_for_windows"/>

            <SCALE sx="3" sy="6.5" sz="0.1"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- japonese window: white plan -->
        <NODE id="white_plan">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="-1.25" y="-3" z="0.06"/>
            <SCALE sx="5" sy="12" sz="1"/>

            <DESCENDANTS>
                <LEAF type="rectangle" args="0.0 0.5 0.5 0.0"/>
            </DESCENDANTS>
        </NODE>

        <!-- japonese window: ridge -->
        <NODE id="ridge">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="wood_for_windows"/>

            <DESCENDANTS>
                <NODEREF id="ridge_top"/>
                <NODEREF id="ridge_bottom"/>
                <NODEREF id="ridge_left"/>
                <NODEREF id="ridge_right"/>
                <NODEREF id="div_1"/>
                <NODEREF id="div_2"/>
                <NODEREF id="div_3"/>
            </DESCENDANTS>
        </NODE>

        <!-- japonese window: top ridge -->
        <NODE id="ridge_top">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0" y="3" z="0.08"/>
            <SCALE sx="2.55" sy="0.05" sz="0.05"/>

            <DESCENDANTS>
                <NODEREF id="cube"/>
            </DESCENDANTS>
        </NODE>

        <!-- japonese window: bottom ridge -->
        <NODE id="ridge_bottom">
            <MATERIAL id="defaultMaterial"/>
            <TEXTURE id="null"/>

            <TRANSLATION x="0" y="-3" z="0.08"/>
