<SCENE>
  <!-- Inicial values -->
  <INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
  </INITIALS>

  <!-- Illumination and clear colour -->
  <ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0" a="1" />
  </ILLUMINATION>

  <!-- Lights -->
  <LIGHTS>
    <LIGHT id="light0">
      <enable value ="1" />
      <position  x="0" y="10" z="0" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
      <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light1">
      <enable value ="1" />
      <position x="30" y="10" z="0" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
      <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light2">
      <enable value ="1" />
      <position x="0" y="10" z="20" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
      <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light3">
      <enable value ="1" />
      <position x="30" y="10" z="20" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
      <specular r="0.6" g="0.6" b="0.6" a="1.0" />
    </LIGHT>
  </LIGHTS>

  <TEXTURES>
    <!-- Tree trunk -->
    <TEXTURE id="trunk">
      <file path="images/trunk-image.jpg" />
      <amplif_factor s="2" t="2" />
    </TEXTURE>

    <!-- Tree leaves -->
    <TEXTURE id="folhas">
      <file path="images/leaves.jpg" />
      <amplif_factor s="3" t="4" />
    </TEXTURE>

    <!-- Rocks -->
    <TEXTURE id="rocks">
      <file path="images/rocks.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <!-- Glass work -->
    <TEXTURE id="vidral">
      <file path="images/vidral.jpg" />
      <amplif_factor s="15" t="10" />
    </TEXTURE>

    <!-- Street bench -->
    <TEXTURE id="banco">
      <file path="images/bank.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>
  </TEXTURES>

  <MATERIALS>
    <!-- A default material -->
    <MATERIAL id="defaultMaterial">
      <shininess value="1" />
      <specular r="0.0" g="0.0" b="0.0" a="1" />
      <diffuse r="0.4" g="0.4" b="0.4" a="1" />
      <ambient r="0.4" g="0.4" b="0.4" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>
  </MATERIALS>

  <LEAVES>
  </LEAVES>

  <NODES>
    <ROOT id="root"/>

    <!-- raiz -->
    <NODE id="root">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>
      <DESCENDANTS>
        <NODEREF id="floor"/>
        <NODEREF id="asides"/>
      </DESCENDANTS>
    </NODE>

    <!-- chÃ£o -->
    <NODE id="floor">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <SCALE sx="35" sy="0" sz="45" />
      <TRANSLATION x="0" y="0" z="1" />
      <ROTATION axis="x" angle="-90" />

      <DESCENDANTS>
        <LEAF type="rectangle" args="0 1 1 0"/>
      </DESCENDANTS>
    </NODE>

    <!-- cais laterais -->
    <NODE id="asides">
      <!-- definir materiais e texturas aqui-->
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <DESCENDANTS>
        <NODEREF id="asideLeft"/>
        <NODEREF id="asideRigth"/>
      </DESCENDANTS>
    </NODE>

    <!-- cais do lado esquerdo -->
    <NODE id="asideLeft">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>

      <SCALE sx="70" sy="5" sz="10" />

      <DESCENDANTS>
        <NODEREF id="myRectangle"/>
      </DESCENDANTS>
    </NODE>

    <!-- cais do lado direito -->
    <NODE id="asideRigth">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>

      <TRANSLATION x="0" y="0" z="20" />

      <DESCENDANTS>
        <NODEREF id="myRectangle"/>
      </DESCENDANTS>
    </NODE>

    <!-- cais genrico -->
    <NODE id="myRectangle">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>

      <SCALE sx="0.5" sy="0.5" sz="1.5" />
      <TRANSLATION x="0" y="0" z="-0.5" />

      <DESCENDANTS>
        <NODEREF id="faceCubo1" />
        <NODEREF id="faceCubo2" />
        <NODEREF id="faceCubo3" />
        <NODEREF id="faceCubo4" />
        <NODEREF id="faceCubo5" />
        <NODEREF id="faceCubo6" />
      </DESCENDANTS>
    </NODE>

    <!-- A cube face -->
    <NODE id="faceCubo1">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="0" z="1.5" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="0 1 1 0" />
      </DESCENDANTS>
    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo2">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="0" z="0.5" />
		  <ROTATION axis="y" angle="-90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="0 1 1 0" />
      </DESCENDANTS>
    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo3">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="1" y="0" z="1.5" />
		  <ROTATION axis="y" angle="90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="0 1 1 0" />
      </DESCENDANTS>
    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo4">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="1" y="0" z="0.5" />
      <ROTATION axis="y" angle="180" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="0 1 1 0" />
      </DESCENDANTS>
    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo5">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <ROTATION axis="x" angle="-90" />
      <TRANSLATION x="0" y="-1.5" z="1" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="0 1 1 0" />
      </DESCENDANTS>
    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo6">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="0" z="0.5" />
      <ROTATION axis="x" angle="90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="0 1 1 0" />
      </DESCENDANTS>
    </NODE>

  </NODES>
</SCENE>
